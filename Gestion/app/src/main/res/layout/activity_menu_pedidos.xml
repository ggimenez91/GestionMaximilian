<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#131912"
    tools:context="com.gastongimenez.www.gestion.MenuPedidos">

    <Button android:id="@+id/BtnPedidoNuevo"
        android:onClick="menuSeleccionado"
        android:text="@string/nuevopedido"
        android:textColor="#D4D4D4"
        android:gravity="left|center_vertical"
        android:shadowColor="#5D5E5E"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="25dp"
        android:background="@drawable/estiloboton"
        android:drawablePadding="5dp"
        android:layout_marginBottom="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <Button android:id="@+id/BtnPedidosListar"
        android:onClick="menuSeleccionado"
        android:text="@string/listarpedidos"
        android:textColor="#D4D4D4"
        android:gravity="left|center_vertical"
        android:shadowColor="#5D5E5E"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="25dp"
        android:background="@drawable/estiloboton"
        android:drawablePadding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
